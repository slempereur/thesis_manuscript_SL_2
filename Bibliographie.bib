@article{demattos_2020,
title = {Variation in canopy structure, leaf area, light interception and light use efficiency among Eucalyptus clones},
author = {de Mattos, Eduardo M. and Binkley, Dan and Campoe, Otavio C. and Alvares, Clayton A. and Stape, Jose L.},
pages = {118038},
year = {2020},
