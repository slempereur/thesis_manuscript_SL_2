@article{xie_2020,
title = {Skin lesion segmentation using high-resolution convolutional neural network.},
author = {Xie, Fengying and Yang, Jiawen and Liu, Jie and Jiang, Zhiguo and Zheng, Yushan and Wang, Yukun},
