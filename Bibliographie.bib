@article{crilly_2018,
title = {Using zebrafish larval models to study brain injury, locomotor and neuroinflammatory outcomes following intracerebral haemorrhage.},
author = {Crilly, Siobhan and Njegic, Alexandra and Laurie, Sarah E and Fotiou, Elisavet and Hudson, Georgina and Barrington, Jack and Webb, Kirsty and Young, Helen L and Badrock, Andrew P and Hurlstone, Adam and Rivers-Auty, Jack and Parry-Jones, Adrian R and Allan, Stuart M and Kasher, Paul R},
pages = {1617},
