@article{asokan_2020,
title = {Long-term in vivo imaging reveals tumor-specific dissemination and captures host tumor interaction in zebrafish xenografts.},
author = {Asokan, Nandini and Daetwyler, Stephan and Bernas, Stefanie N and Schmied, Christopher and Vogler, Steffen and Lambert, Katrin and Wobus, Manja and Wermke, Martin and Kempermann, Gerd and Huisken, Jan and Brand, Michael and Bornhäuser, Martin},
pages = {13254},
